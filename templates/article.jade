
extends layout

block header
  div.logo
    h1
      a(href=locals.url)= locals.name
    p.description= locals.description

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block content
  article.article
    h1= page.title
    p.date
      span= moment.utc(page.date).format('DD. MMMM YYYY')
    section.content!= typogr(page.html).typogrify()

