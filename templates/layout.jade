doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:600|Oxygen')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
            p.description= locals.description
            ul.logos
              li
                img(src='/images/gulp.png', title='Gulp')
                span Gulp
              li
                img(src='/images/bower.png', title='Bower')
                span Bower
              li
                img(src='/images/npm.png', title='NPM')
                span npm
              li
                img(src='/images/browsersync.png', title='BrowserSync')
                span BrowserSync

    div#content
      div.content-wrap
        block content
          h2 Welcome to Radix!
    footer
      div.content-wrap
        block footer
          section.about
            div.links
              h4 Drupal
              ul
                li
                  a(href='http://drupal.org/project/radix') Project
                li
                  a(href='http://radixtheme.org/documentation') Documentation
                li
                  a(href='http://github.com/radixtheme/radix/issues') Support
                li
                  a(href='http://twitter.com/radixtheme') Twitter
            div.links
              h4 BackdropCMS
              ul
                li
                  a(href='http://backdropcms.org/project/radix') Project
                li
                  a(href='http://radixtheme.org/documentation') Documentation
                li
                  a(href='http://github.com/backdrop-contrib/radix/issues') Support
                li
                  a(href='http://twitter.com/radixtheme') Twitter
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; Responsive base theme for #[a(href='https://drupal.org') Drupal] and #[a(href='https://backdropcms.org') BackdropCMS]
              //- please leave the "powered by" if you use the design
