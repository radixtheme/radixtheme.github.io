
extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span Articles
        h2
          a(href=article.url)= article.title

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Newer
    if nextPage
      a(href=nextPage.url) Next page »
